- model_class = Meeting
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @meeting.name
%p
  %strong= model_class.human_attribute_name(:agenda) + ':'
  %br
  = @meeting.agenda

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), company_meetings_path(@company), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_meeting_path(@meeting), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), meeting_path(@meeting), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
